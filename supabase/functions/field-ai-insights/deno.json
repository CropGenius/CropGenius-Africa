{
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "imports": {
    "std/http/server": "https://deno.land/std@0.177.0/http/server.ts"
  },
  "lint": {
    "files": {
      "include": ["./*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": false
    }
  }
}
