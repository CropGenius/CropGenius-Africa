{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "vitest", "@testing-library/jest-dom", "@testing-library/react", "@testing-library/user-event"],
    "esModuleInterop": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
